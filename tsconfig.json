{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
